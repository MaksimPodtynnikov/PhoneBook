<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/nameField"
        android:layout_width="405dp"
        android:layout_height="39dp"
        android:text="Имя"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/familyField"
        android:layout_width="195dp"
        android:layout_height="37dp"
        android:text="Фамилия"
        app:layout_constraintEnd_toStartOf="@+id/patronymicField"
        app:layout_constraintStart_toStartOf="@+id/nameField"
        app:layout_constraintTop_toBottomOf="@+id/nameField" />

    <TextView
        android:id="@+id/patronymicField"
        android:layout_width="209dp"
        android:layout_height="32dp"
        android:layout_marginTop="1dp"
        android:text="Отчество"
        app:layout_constraintEnd_toEndOf="@+id/nameField"
        app:layout_constraintTop_toBottomOf="@+id/nameField" />

</androidx.constraintlayout.widget.ConstraintLayout>